# ------------------------------------------------------------------------------
#  Install the notebook
# ------------------------------------------------------------------------------
.PHONY: install
install: 
	cargo install mdbook


# ------------------------------------------------------------------------------
#  Uninstall the notebook
# ------------------------------------------------------------------------------
.PHONY: uninstall
uninstall: 
	cargo uninstall mdbook


# ------------------------------------------------------------------------------
#  Build the notebook
# ------------------------------------------------------------------------------
.PHONY: build
build: 
	mdbook build

# ------------------------------------------------------------------------------
#  Run the notebook
# ------------------------------------------------------------------------------
.PHONY: run
run: 
	mdbook serve --open

# ------------------------------------------------------------------------------
#  Clean the notebook
# ------------------------------------------------------------------------------
.PHONY: clean
clean: 
	rm -rf ./book